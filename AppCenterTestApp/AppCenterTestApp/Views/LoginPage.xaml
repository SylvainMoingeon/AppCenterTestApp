<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCenterTestApp.Views.LoginPage"
             BindingContext="{Binding Source={x:Static Application.Current},
                                      Path=LoginPageViewModel}">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label>Identifiant</Label>
            <Entry AutomationId="LoginId" Text="{Binding UserId}"></Entry>
            <Label>Mot de passe</Label>
            <Entry AutomationId="LoginPassword" Text="{Binding UserPassword}" IsPassword="True"  ></Entry>

            <Button AutomationId="LoginButton" Command="{Binding LoginCommand}" Text="SE CONNECTER"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>